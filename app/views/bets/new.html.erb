<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <style>
    .table {
      width: 900px;
      margin-left: auto;
      margin-right: auto;
    }
    </style>
  </head>
  <body>

    <table class="table">
      <thead>
        <tr>
          <th scope="col" colspan="3"></th>
          <th scope="col">1</th>
          <th scope="col">X</th>
          <th scope="col">2</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart.each do |event| %>
        <tr>
          <td><%= event.dattime.strftime("%d %b %Y %H:%M")%></td>
          <td><%= event.team1%></td>
          <td><%= event.team2%></td>
          <td><%= event.win_ratio_1%></td>
          <td><%= event.draw_ratio%></td>
          <td><%= event.win_ratio_2%></td>
          <td>
            <form action="/user/logout" method="POST">
                <span class="form-floating mb-3">      
                <input type="text" class="form-control" name="money" style="width: 100px;">
                <label for="floatingInput">Выбор</label>
                </span>
            </form>
          </td>
          <td>
            <% if @cart.include?(event) %>
            <form action="/event/remove_from_cart/<%= event.id %>" method="POST">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <button type="submit" class="btn btn-primary" style="width: 100px;">Удалить из купона</button>
            </form>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</html>